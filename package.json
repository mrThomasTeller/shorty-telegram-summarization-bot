    "@types/node-telegram-bot-api": "^0.61.6",
    "chatgpt": "^5.2.2",
    "dotenv": "^16.0.3",
    "execa": "^7.1.1",
    "forever": "^4.0.3",
    "jest": "^29.5.0",
    "lodash": "^4.17.21",
    "node-telegram-bot-api": "^0.61.0",
    "prisma": "^4.13.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.2",
