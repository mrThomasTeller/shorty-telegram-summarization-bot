{
  "name": "gpt-telegram-summarize-bot",
  "version": "0.7.0-alpha.1",
  "description": "",
  "main": "src/start.ts",
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "npm": "please-use-pnpm",
    "pnpm": ">= 8",
    "node": ">= 18"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm db:gen-types",
    "dev": "NODE_NO_WARNINGS=1 pnpm dev:watch",
    "start": "NODE_NO_WARNINGS=1 pnpm dev:start",
    "status": "pnpm server:status",
    "test": "pnpm check:test",
    "lint": "pnpm check:lint",
    "commit": "pnpm git:commit",
    "check:test": "jest src --no-coverage",
    "check:test-only": "jest --no-coverage",
    "check:test-coverage": "jest src",
    "check:lint": "eslint src --ext ts,tsx,js,jsx",
    "check:ts": "tsc --noEmit",
    "check:verify": "pnpm check:ts && pnpm check:lint && pnpm check:test",
    "dev:format": "prettier . --ignore-unknown --write",
    "dev:start": "ts-node-esm src/start.ts summarizeBotServer",
    "dev:start-debug": "node --loader ts-node/esm --inspect src/start.ts summarizeBotServer",
    "dev:watch": "nodemon -x 'ts-node-esm src/start.ts summarizeBotServer' --ext ts,js,json,jsx",
    "dev:majestic": "npx majestic",
    "db:create-migration": "prisma migrate dev --name",
    "db:gen-types": "prisma generate",
    "server:start": "pm2 delete summarizeBotServer || true && pm2 start 'ts-node-esm src/start.ts summarizeBotServer' --name summarizeBotServer --no-daemon",
    "server:stop": "pm2 stop summarizeBotServer",
    "server:restart": "pm2 restart summarizeBotServer || pnpm server:start",
    "server:status": "pm2 list",
    "server:log": "pm2 log summarizeBotServer",
    "prod:install": "pnpm install --prod --frozen-lockfile",
    "prod:prepare-db": "prisma migrate deploy && pnpm db:gen-types",
    "git:minor-commit": "pnpm check:verify && npm --no-git-tag-version version minor && git add -A && git commit --no-verify && git push",
    "git:patch-commit": "pnpm check:verify && npm --no-git-tag-version version patch && git add -A && git commit --no-verify && git push",
    "git:commit": "pnpm check:verify && npm --no-git-tag-version version prerelease && git add -A && git commit --no-verify && git push",
    "git:commit-keep-version": "git add -A && git commit && git push",
    "git:fcommit": "npm --no-git-tag-version version prerelease && git add -A && git commit --no-verify && git push",
    "git:fcommit-keep-version": "git add -A && git commit --no-verify && git push",
    "git:acommit": "git add -A && git commit --amend --no-edit && git push --force",
    "git:facommit": "git add -A && git commit --amend --no-edit --no-verify && git push --force"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  },
  "dependencies": {
    "@darkobits/fd-name": "^0.1.7",
    "@prisma/client": "^5.3.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.7.0",
    "@types/node-telegram-bot-api": "^0.61.8",
    "chatgpt": "^5.2.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "execa": "^8.0.1",
    "fp-ts": "^2.16.1",
    "i18next": "^23.5.1",
    "lodash": "^4.17.21",
    "node-telegram-bot-api": "^0.63.0",
    "only-allow": "^1.2.0",
    "pm2": "^5.3.0",
    "prisma": "^5.3.1",
    "rxjs": "^7.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "utility-types": "^3.10.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.21.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1"
  }
}
