{
  "name": "gpt-telegram-summarize-bot",
  "version": "0.3.1",
  "description": "",
  "main": "src/start.ts",
  "type": "module",
  "engines": {
    "npm": "please-use-pnpm",
    "pnpm": ">= 8",
    "node": ">= 18"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm db:gen-types",
    "dev": "NODE_NO_WARNINGS=1 pnpm dev:watch",
    "start": "NODE_NO_WARNINGS=1 pnpm dev:start",
    "status": "pnpm server:status",
    "test": "pnpm check:test",
    "check:test": "jest src",
    "check:lint": "eslint src",
    "check:ts": "tsc --noEmit",
    "check:verify": "pnpm check:test && pnpm check:lint",
    "dev:start": "ts-node-esm src/start.ts summarizeBotServer",
    "dev:watch": "nodemon -x 'ts-node-esm src/start.ts summarizeBotServer' --ext ts,js,json,jsx",
    "db:gen-types": "prisma generate",
    "server:start": "pm2 delete summarizeBotServer || true && pm2 start 'ts-node-esm src/start.ts summarizeBotServer' --name summarizeBotServer --no-daemon",
    "server:stop": "pm2 stop summarizeBotServer",
    "server:restart": "pm2 restart summarizeBotServer || pnpm server:start",
    "server:status": "pm2 list",
    "server:log": "pm2 log summarizeBotServer",
    "prod:install": "pnpm install --prod --frozen-lockfile",
    "prod:prepare-db": "prisma migrate deploy && pnpm db:gen-types",
    "git:minor-commit": "npm --no-git-tag-version version minor && git add -A && git commit && git push",
    "git:commit": "npm --no-git-tag-version version patch && git add -A && git commit && git push",
    "git:fcommit": "npm --no-git-tag-version version patch && git add -A && git commit --no-verify && git push",
    "git:acommit": "git add -A && git commit --amend --no-edit && git push --force"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@darkobits/fd-name": "^0.1.7",
    "@prisma/client": "^4.13.0",
    "@types/lodash": "^4.14.194",
    "@types/node": "^18.16.3",
    "@types/node-telegram-bot-api": "^0.61.6",
    "chatgpt": "^5.2.2",
    "dotenv": "^16.0.3",
    "execa": "^7.1.1",
    "lodash": "^4.17.21",
    "node-telegram-bot-api": "^0.61.0",
    "only-allow": "^1.1.1",
    "pm2": "^5.3.0",
    "prisma": "^4.13.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "utility-types": "^3.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-mock-console": "^2.0.0",
    "jest-mock-extended": "^3.0.5",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0"
  }
}
