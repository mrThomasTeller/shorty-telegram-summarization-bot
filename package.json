{
  "name": "gpt-telegram-summarize-bot",
  "version": "1.0.0",
  "description": "",
  "main": "src/start.ts",
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.17",
    "node": ">= 18"
  },
  "scripts": {
    "deploy": "yarn prod:deploy",
    "dev": "NODE_NO_WARNINGS=1 yarn dev:watch",
    "start": "NODE_NO_WARNINGS=1 yarn dev:start",
    "status": "yarn server:status",
    "test": "yarn check:test",
    "check:test": "jest src",
    "check:lint": "eslint src",
    "check:ts": "tsc --noEmit",
    "check:verify": "yarn check:test && yarn check:lint",
    "dev:start": "npx ts-node src/start.ts summarizeBotServer",
    "dev:watch": "nodemon -x 'npx ts-node src/start.ts summarizeBotServer' --ext ts,js,json,jsx",
    "db:gen-types": "npx prisma generate",
    "server:start": "pm2 start 'npx ts-node src/start.ts summarizeBotServer' --name summarizeBotServer",
    "server:stop": "pm2 stop summarizeBotServer",
    "server:restart": "pm2 restart summarizeBotServer || yarn server:start",
    "server:status": "pm2 list",
    "server:log": "pm2 log summarizeBotServer",
    "prod:deploy": "git pull && npm i && npx prisma migrate deploy && npx prisma generate && yarn server:restart",
    "git:commit": "git add -A && git commit && git push",
    "git:fcommit": "git add -A && git commit --no-verify && git push",
    "git:acommit": "git add -A && git commit --amend --no-edit && git push --force"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.13.0",
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.194",
    "@types/node": "^18.16.3",
    "@types/node-telegram-bot-api": "^0.61.6",
    "chatgpt": "^5.2.2",
    "dotenv": "^16.0.3",
    "execa": "^7.1.1",
    "jest": "^29.5.0",
    "jest-mock-console": "^2.0.0",
    "jest-mock-extended": "^3.0.5",
    "lodash": "^4.17.21",
    "node-telegram-bot-api": "^0.61.0",
    "pm2": "^5.3.0",
    "prisma": "^4.13.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "utility-types": "^3.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0"
  }
}
