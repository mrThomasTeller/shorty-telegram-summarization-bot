{
  "name": "gpt-telegram-summarize-bot",
  "version": "1.0.0",
  "description": "",
  "main": "build/src/index.js",
  "type": "module",
  "scripts": {
    "check:test": "jest",
    "check:lint": "eslint src",
    "check:ts": "tsc --noEmit",
    "dev:build": "tsc",
    "dev:watch": "nodemon build/src/index.js --ext ts,js,json,jsx",
    "dev:start": "npm run dev:build && node build/src/index.js",
    "db:gen-types": "npx prisma generate",
    "server:start": "NODE_NO_WARNINGS=1 forever start build/src/index.js",
    "server:stop": "NODE_NO_WARNINGS=1 forever stop build/src/index.js",
    "server:restart": "NODE_NO_WARNINGS=1 forever restart build/src/index.js",
    "server:status": "NODE_NO_WARNINGS=1 forever list",
    "prod:deploy": "git pull && npm i && npx prisma migrate deploy && npx prisma generate && npm run server:restart"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.13.0",
    "@types/jest": "^29.5.1",
