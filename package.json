{
  "name": "gpt-telegram-summarize-bot",
  "version": "1.0.0",
  "description": "",
  "main": "build/src/summarize-bot-server.js",
  "type": "module",
  "scripts": {
    "build": "npm run dev:build",
    "deploy": "npm run prod:deploy",
    "dev": "NODE_NO_WARNINGS=1 npm run dev:watch",
    "start": "NODE_NO_WARNINGS=1 npm run dev:start",
    "stop": "npm run dev:stop",
    "status": "npm run server:status",
    "test": "npm run check:test",
    "check:test": "npm run dev:build && jest build",
    "check:lint": "eslint src",
    "check:ts": "tsc --noEmit",
    "check:verify": "npm run check:test && npm run check:lint",
    "dev:build": "tsc",
    "dev:watch": "tsc --watch & nodemon build/src/summarize-bot-server.js --ext ts,js,json,jsx",
    "dev:start": "NODE_NO_WARNINGS=1 npm run dev:build && node build/src/summarize-bot-server.js",
    "db:gen-types": "npx prisma generate",
    "server:start": "pm2 start build/src/summarize-bot-server.js",
    "server:stop": "pm2 stop build/src/summarize-bot-server.js",
    "server:restart": "pm2 restart build/src/summarize-bot-server.js",
    "server:status": "pm2 list",
    "server:log": "pm2 log build/src/summarize-bot-server.js",
    "prod:deploy": "git pull && npm i && npx prisma migrate deploy && npx prisma generate && npm run server:restart"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.13.0",
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.194",
    "@types/node": "^18.16.3",
    "@types/node-telegram-bot-api": "^0.61.6",
    "chatgpt": "^5.2.2",
    "dotenv": "^16.0.3",
    "execa": "^7.1.1",
    "jest": "^29.5.0",
    "lodash": "^4.17.21",
    "node-telegram-bot-api": "^0.61.0",
    "pm2": "^5.3.0",
    "prisma": "^4.13.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0"
  }
}
