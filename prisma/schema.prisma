datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        BigInt    @id
  firstName String?
  lastName  String?
  username  String?
  messages  Message[]
}

model Chat {
  id       BigInt    @id
  messages Message[]
}

model Message {
  messageId BigInt
  text      String?
  date      DateTime
  from      User?    @relation(fields: [userId], references: [id])
  userId    BigInt?
  chat      Chat     @relation(fields: [chatId], references: [id])
  chatId    BigInt

  @@id([messageId, chatId])
}
