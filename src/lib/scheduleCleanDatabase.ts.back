export async function scheduleCleanDatabase(): Promise<void> {
  const prisma = new PrismaClient();

  const date = new Date();
  date.setDate(date.getDate() - 7);

  const result = await prisma.message.deleteMany({
    where: {
      date: { lt: date.getTime() },
    },
  });

  console.info(`Deleted ${result.count} messages`);
}
